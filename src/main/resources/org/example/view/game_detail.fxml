<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controller.GameDetailController"
      spacing="10"
      style="-fx-padding: 20; -fx-background-color: #fce4ec;">

    <Label text="Game Details"
           style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #880e4f;" />

    <ImageView fx:id="coverImage" fitWidth="200" fitHeight="250" preserveRatio="true" />

    <Label fx:id="titleLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="developerLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="publisherLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="genreLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="platformLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="translatorLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="steamIdLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="releaseYearLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="playtimeLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="formatLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="languageLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="ratingLabel" style="-fx-text-fill: #4a148c;" />
    <Label fx:id="tagsLabel" style="-fx-text-fill: #4a148c;" />
</VBox>

