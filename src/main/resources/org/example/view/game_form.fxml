<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="org.example.controller.GameFormController"
          hgap="10" vgap="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Developer:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="developerField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Publisher:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="publisherField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Genres (comma-separated):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="genreField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Platforms (comma-separated):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <TextField fx:id="platformsField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Translators (comma-separated):" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="translatorsField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Steam ID:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <TextField fx:id="steamIdField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Release Year:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="yearField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

    <Label text="Playtime (hours):" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
    <TextField fx:id="playtimeField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Format:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="formatField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>

    <Label text="Language:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextField fx:id="languageField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>

    <Label text="Rating (0.0 - 10.0):" GridPane.rowIndex="11" GridPane.columnIndex="0"/>
    <TextField fx:id="ratingField" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

    <Label text="Cover Image:" GridPane.rowIndex="12" GridPane.columnIndex="0"/>
    <Button text="Choose Image" onAction="#onChooseImageClicked" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

    <Label text="Tags:" GridPane.rowIndex="13" GridPane.columnIndex="0"/>
    <VBox fx:id="tagBox" spacing="5" GridPane.rowIndex="13" GridPane.columnIndex="1">
        <CheckBox text="RPG"/>
        <CheckBox text="Turn-based"/>
        <CheckBox text="Multiplayer"/>
        <CheckBox text="Shooter"/>
        <CheckBox text="Adventure"/>
        <CheckBox text="Strategy"/>
    </VBox>

    <Button text="Save" onAction="#onSave" GridPane.rowIndex="14" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>
</GridPane>
